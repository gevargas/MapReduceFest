<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project basedir="." default="build-project" name="Summarization">
    <property environment="env"/>
    <property name="debuglevel" value="source,lines,vars"/>
    <property name="target" value="1.6"/>
    <property name="source" value="1.6"/>
    <path id="Summarization.classpath">
        <pathelement location="bin"/>
        <pathelement location="../Libs/hadoop-core-1.0.4.jar"/>
        <pathelement location="../Libs/commons-logging-1.1.1.jar"/>
    </path>
    <target name="init">
        <mkdir dir="bin"/>
    </target>
    <target name="clean">
        <delete dir="bin"/>
        <delete file="../summarization.jar" />	
    </target>
    <target depends="init" name="build-project">
        <echo message="${ant.project.name}: ${ant.file}"/>
        <javac debug="true" debuglevel="${debuglevel}" destdir="bin" source="${source}" target="${target}" includeantruntime="false">
            <src path="src"/>
            <classpath refid="Summarization.classpath"/>
        </javac>
        <jar destfile="../summarization.jar" basedir="bin" />    	
    </target>
</project>
